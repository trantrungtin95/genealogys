<h4>My Family:</h4>
<table>
    <tr>
        <th>Surname:</th>
        <th>Adress:</th>
    </tr>
    <% @families.each do |family| %>
        <tr>
            <td><%= link_to family.surname, user_family_path( @current_user, family)%></td>
            <td><%= family.address%></td>
        </tr>
    <% end if !@families.nil? %>
</table>
<%= link_to "New Family", new_user_family_path(@current_user) %>
<div><%= link_to "Back", user_path(@current_user)%></div>